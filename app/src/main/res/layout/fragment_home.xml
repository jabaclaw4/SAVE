<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:background="@color/logo_clr">


    <me.tankery.lib.circularseekbar.CircularSeekBar
        android:id="@+id/timerSeekBar"
        android:layout_width="240sp"
        android:layout_height="240sp"
        android:layout_gravity="center"
        app:cs_circle_color="@color/brouwn"
        app:cs_circle_fill="@color/yellow"
        app:cs_circle_progress_color="@color/green"
        app:cs_circle_stroke_width="10dp"
        app:cs_circle_style="round"
        app:cs_circle_x_radius="0dp"
        app:cs_circle_y_radius="0dp"
        app:cs_disable_pointer="false"
        app:cs_disable_progress_glow="true"
        app:cs_hide_progress_when_empty="true"
        app:cs_lock_enabled="true"
        app:cs_maintain_equal_circle="true"
        app:cs_max="100"
        app:cs_move_outside_circle="true"
        app:cs_negative_enabled="false"
        app:cs_pointer_alpha_ontouch="5"
        app:cs_pointer_color="@color/green"
        app:cs_pointer_stroke_width="24dp"
        app:cs_use_custom_radii="false"
        app:cs_pointer_halo_color = "@color/green"
        app:cs_pointer_halo_color_ontouch = "@color/green"/>

    <TextView
        android:id="@+id/viewTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="500sp"
        android:fontFamily="serif"
        android:text="00:00"
        android:textSize="80sp" />


</FrameLayout>